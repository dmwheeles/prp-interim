               </persName>
               <persName type="participant">
                  <forename>John</forename>
                  <surname>F. Kennedy Jr.</surname>
               </persName>
               <persName type="participant">
                  <forename>Evelyn</forename>
                  <surname>Lincoln?</surname>
               </persName>
               <time subtype="start-time">00:00</time>
